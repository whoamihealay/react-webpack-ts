{
  "name": "react-webpack-ts-template",
  "version": "1.0.0",
  "description": "React Webpack template w/ Typescript",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "npm run clean && tsc && tsc -m es6 --outDir tsc/lib-esm && webpack && rm -rf tsc",
    "start": "webpack-dev-server --mode production --open",
    "clean": "rm -rf dist tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "analyze": "webpack-bundle-analyzer 'dist/*.js'"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whoamihealay/react-webpack-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": "https://github.com/whoamihealay/react-webpack-ts/issues",
  "homepage": "https://github.com/whoamihealay/react-webpack-ts#readme",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.9",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "autoprefixer": "^10.4.2",
    "css-loader": "^6.5.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "mini-css-extract-plugin": "^2.5.1",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.2.3",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.15",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.4",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
